{% extends 'base.html.twig' %}

{% block body %}
    <div class="page-header">
        <h1>Post Searcher</h1>
    </div>
    <form class="form-inline" action="{{path('jonafrank_search')}}">
        <div class="form-group">
            <input type="text" class="form-control" id="searchbox" name=query>
        </div>
        <button type="submit" class="btn btn-default">Search</button>
    </form>
    <div class="posts" style="padding-top: 15px">
        {% for post in pagination %}
            <div class="panel panel-default">
                <div class="panel-heading"><h4><a href="{{path("post", {'id': post.id })}}">{{post.title}}</a></h4></div>
                <div class="panel-body postbody">
                    {{post.body}}
                </div>
            </div>
        {% endfor %}
    </div>
    {{ knp_pagination_render(pagination) }}
{% endblock %}
